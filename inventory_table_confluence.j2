<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="utf-8" />
  <title>AAP Inventory Report</title>
  <style>
    body {
      font-family: "Segoe UI", Tahoma, Arial, sans-serif;
      background: #f8fafc;
      color: #1e293b;
      margin: 0;
      padding: 0;
    }

    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 2rem 1.5rem;
    }

    header {
      text-align: center;
      margin-bottom: 1.5rem;
    }

    header h1 {
      font-size: 2rem;
      margin: 0;
      color: #0b3d91;
    }

    header p {
      margin: 0.5rem 0 0;
      color: #475569;
      font-size: 0.95rem;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      font-size: 13px;
      background: #ffffff;
      box-shadow: 0 6px 20px -8px rgba(0, 0, 0, 0.15);
      border-radius: 12px;
      overflow: hidden;
    }

    th, td {
      padding: 10px 12px;
      text-align: center;
      vertical-align: top;
    }

    th {
      background-color: #f1f5f9;
      font-weight: 600;
      color: #334155;
    }

    tr:nth-child(even) {
      background-color: #f9fafb;
    }

    .status-ok {
      background: rgba(34, 197, 94, 0.2);
      color: #166534;
      border-radius: 6px;
      padding: 4px 8px;
      font-weight: 600;
      display: inline-block;
      min-width: 70px;
    }

    .status-critical {
      background: rgba(239, 68, 68, 0.2);
      color: #b91c1c;
      border-radius: 6px;
      padding: 4px 8px;
      font-weight: 600;
      display: inline-block;
      min-width: 70px;
    }

    .role {
      text-align: left;
      vertical-align: top;
      font-weight: 600;
      padding-left: 8px;
    }

    .summary {
      margin-top: 1rem;
      font-size: 14px;
      color: #334155;
    }
  </style>
</head>
<body>
  <div class="container">
    <header>
      <h1>{{ (group_name | replace('_',' ') | title) if group_name is defined else 'AAP Inventory Report' }}</h1>
      <p>Generated at {{ '%Y-%m-%d %H:%M:%S' | strftime }}</p>
    </header>

    <table>
      <thead>
        <tr>
          <th>Hostname</th>
          <th>IP Address</th>
          <th>OS Version</th>
          <th>Kernel</th>
          <th>Root Disk</th>
          <th>/var</th>
          <th>/boot</th>
          <th>DB Services</th>
          <th>Role</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody>
        {% set host_list = groups.get(group_name, []) %}
        {% set total = host_list | length %}
        {% set live_hosts = 0 %}
        {% set db_count = 0 %}

        {% if host_list | length == 0 %}
          <tr><td colspan="10"><b>No hosts found in group '{{ group_name }}'</b></td></tr>
        {% else %}
          {% for host in host_list %}
            {% set facts = hostvars.get(host, {}) %}
            {% set reachable = (
                 (facts.get('ansible_hostname')) or
                 (facts.get('ansible_fqdn')) or
                 (facts.get('ansible_default_ipv4', {}).get('address'))
               ) %}
            {% if reachable %}
              {% set live_hosts = live_hosts + 1 %}
            {% endif %}

            {% set mounts = facts.get('ansible_mounts', []) %}
            {% set root = (mounts | selectattr('mount', 'equalto', '/') | list | first) %}
            {% set var = (mounts | selectattr('mount', 'equalto', '/var') | list | first) %}
            {% set boot = (mounts | selectattr('mount', 'equalto', '/boot') | list | first) %}
            {% set var_free_gb = (var.size_available / 1024 / 1024 / 1024) if var and var.get('size_available') else 0 %}
            {% set boot_free_mb = (boot.size_available / 1024 / 1024) if boot and boot.get('size_available') else 0 %}
            {% set var_class = 'status-ok' if var_free_gb >= 1 else 'status-critical' %}
            {% set boot_class = 'status-ok' if boot_free_mb >= 100 else 'status-critical' %}

            {% set services = facts.get('services', {}) %}
            {% set db_keywords = ['mysql','mariadb','postgres','oracle','mongodb','redis','sql'] %}
            {% set db_services = [] %}
            {% if services is mapping %}
              {% for svc, info in services.items() %}
                {% if info is mapping and info.get('state') and 'running' in info.get('state') %}
                  {% for k in db_keywords %}
                    {% if k in svc and svc not in db_services %}
                      {% set _ = db_services.append(svc) %}
                    {% endif %}
                  {% endfor %}
                {% endif %}
              {% endfor %}
            {% endif %}
            {% set is_db_server = db_services | length > 0 %}
            {% if is_db_server %}{% set db_count = db_count + 1 %}{% endif %}

            <tr>
              <td>{{ facts.get('ansible_hostname', host) }}</td>
              <td>{{ facts.get('ansible_default_ipv4', {}).get('address', 'N/A') }}</td>
              <td>{{ facts.get('ansible_distribution', 'Unknown') }} {{ facts.get('ansible_distribution_version', '') }}</td>
              <td>{{ facts.get('ansible_kernel', 'N/A') }}</td>
              <td>
                {% if root and root.get('size_total') %}
                  {{ (root.size_total / 1024 / 1024 / 1024) | round(1) }} GB
                {% else %}
                  N/A
                {% endif %}
              </td>
              <td><span class="{{ var_class }}">{{ var_free_gb | round(2) }} GB</span></td>
              <td><span class="{{ boot_class }}">{{ boot_free_mb | round(1) }} MB</span></td>
              <td>{% if db_services %}{{ db_services | join(', ') }}{% else %}-{% endif %}</td>
              <td class="role">{% if is_db_server %}Database Server{% else %}Application Server{% endif %}</td>
              <td>
                {% if reachable %}
                  <span style="color:#16a34a;">✅ Live</span>
                {% else %}
                  <span style="color:#dc2626;">❌ Unreachable</span>
                {% endif %}
              </td>
            </tr>
          {% endfor %}
        {% endif %}
      </tbody>
    </table>

    {% set unreachable = total - live_hosts %}
    <div class="summary">
      <p><b>Summary:</b></p>
      <ul style="margin-top:0; padding-left:18px;">
        <li>Total Hosts: {{ total }}</li>
        <li>Live Hosts: {{ live_hosts }}</li>
        <li>Unreachable Hosts: {{ unreachable }}</li>
        <li>Database Servers: {{ db_count }}</li>
      </ul>
    </div>
  </div>
</body>
</html>